@model SmartOffice.Models.TaskAssignment

@{
    ViewData["Title"] = "Edit Assignment";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="OwnerId" class="form-control" />
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 45%;">
                <select asp-for="RunnerId" class="form-control">
                    <option value="">Who will execute this task?</option>
                    @foreach (var user in ViewBag.AllUsers)
                    {
                        <option value=@user.Id>@user.FullName</option>
                    }
                </select>
                <span asp-validation-for="RunnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="width: 85%;" asp-for="Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea style="width: 85%;" asp-for="Instructions" class="form-control"></textarea>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TimeIn" class="form-control" />
                <span asp-validation-for="TimeIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input style="width: 45%;" asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Started" class="form-control" />
                <span asp-validation-for="Started" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Executed" class="form-control" />
                <span asp-validation-for="Executed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ExecutedNotes" class="form-control" />
                <span asp-validation-for="ExecutedNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Completed" class="form-control" />
                <span asp-validation-for="Completed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CompletionNotes" class="form-control" />
                <span asp-validation-for="CompletionNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="status" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="cbtn cbtn-lemon" type="submit" value="Save" />
                <input type="button" class="cbtn cbtn-plain" value="Back to List" onclick="location.href='@Url.Action("Index", "TaskAssignment")'" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
