@model SmartOffice.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit User";
}


<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input style="width: 75%;" asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="width: 75%;" asp-for="LastName" class="form-control" placeholder="Last Namae" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="NormalizedUserName" class="form-control" />
            </div>
            <div class="form-group">
                <input style="width: 75%;" asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NormalizedEmail" class="form-control" />
            </div>
            <div class="form-group form-check">
                    <input type="hidden" class="form-check-input" asp-for="EmailConfirmed" />
            </div>
            <div class="form-group">
                <input type="password" style="width: 75%;" asp-for="PasswordHash" class="form-control" placeholder="Password" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="SecurityStamp" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ConcurrencyStamp" class="form-control" />
            </div>
            <div class="form-group">
                <input style="width: 75%;" asp-for="PhoneNumber" class="form-control" placeholder="Telephone" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                    <input type="hidden" class="form-check-input" asp-for="PhoneNumberConfirmed" />
            </div>
            <div class="form-group form-check">
                    <input type="hidden" class="form-check-input" asp-for="TwoFactorEnabled" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LockoutEnd" class="form-control" />
            </div>
            <div class="form-group form-check">
                    <input type="hidden" class="form-check-input" asp-for="LockoutEnabled" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AccessFailedCount" class="form-control" />
            </div>
            <div class="form-group">
                <input class="cbtn cbtn-lemon" type="submit" value="Save" />
                <input type="button" class="cbtn cbtn-plain" value="Back to List" onclick="location.href='@Url.Action("Index", "ApplicationUser")'" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
